option_settings:
  aws:elasticbeanstalk:container:nodejs:
    NodeCommand: "chmod -R 770 .next"
  aws:elasticbeanstalk:container:nodejs:
    NodeCommand: "npm install"
  aws:elasticbeanstalk:container:nodejs:
      NodeCommand: "npm run build"

files:
  "/opt/elasticbeanstalk/hooks/appdeploy/post/00_set_tmp_permissions.sh":
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/usr/bin/env bash
      chown -R nodejs:nodejs /tmp